<Window x:Class="Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo"
        mc:Ignorable="d"
        Title="Greetings" Height="450" Width="800">
    <Grid>

        <Label VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 10">Select a message option and then click the "Display" button.</Label>
        <RadioButton x:Name="HelloButton" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="200, 0, 0, 0" IsChecked="True">Hello</RadioButton>
        <RadioButton x:Name="GoodbyeButton" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0, 0, 200, 0">Goodbye</RadioButton>
        <Button x:Name="Display" Height="30px" Width="60px" VerticalAlignment="Bottom" Margin="0,0,0, 60" Click="Button_Click_1">Display</Button>

    </Grid>
</Window>
